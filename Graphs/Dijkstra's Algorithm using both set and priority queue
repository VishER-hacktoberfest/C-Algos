    // USING SETS
    public:

    vector <int> dijkstra(int V, vector<vector<int>> adj[], int S)
    {
        // distance vector with all infinite
        vector<int> distance(V);
        for(int i=0;i<V;i++)distance[i]=1e9;
        
        // using sets
        set<pair<int,int>> st;
        
        distance[S]=0;
        st.insert({0,S});
        
        while(!st.empty())
        {
            auto it = *st.begin();  // begin gives iterator deref it (smallest element in set)
            int dis = it.first;
            int node = it.second;
            st.erase(it);
            
            // go in the adjacency list of that node
            for( auto x: adj[node])
            {
                //  now x is [1,1]  or  [weight,adjacent_node]
                int edgeWeight = x[1];
                int adjNode = x[0];
                
                if(dis+edgeWeight < distance[adjNode]){
                    // we have found a better distance 
                    // if anyone has already visited it
                    // erase it , we dont want it , we dont want further iterations
                    if(distance[node]!=1e9)
                        st.erase({distance[node],node});
                    
                    // NEW DISTANCE 
                    distance[adjNode] = dis+edgeWeight;
                    st.insert({distance[adjNode],adjNode});
                }
                
            }
            
        }
        
        return distance;
    }
    };
